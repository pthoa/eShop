                    <td class="col data active" scope="row" style="color: black;width: 50%;border-right:0px;"><?php echo $block->escapeHtml(__($_data['label'])) ?></td>
                    <td class="col data" style="border-left:0px;" data-th="<?php echo $block->escapeHtml(__($_data['label'])) ?>"><?php /* @escapeNotVerified */ echo $_helper->productAttribute($_product, $_data['value'], $_data['code']) ?></td>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
    </div>
<?php endif;?>
