<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<head>
    <css src="TMA_Catalog/css/source/_module.less"/>
     <css src="TMA_Catalog/css/gallery.css"/>
       <css src="TMA_Catalog/css/my_custom.css"/>
</head>
<body>


   <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">tma_title</argument>
                <argument name="add_base_attribute" xsi:type="string">itemprop="name"</argument>
            </arguments>
        </referenceBlock>
       <referenceContainer name="product.info.main">
        <block class="TMA\Catalog\Block\Product\View\Description" name="product.info.overview" template="TMA_Catalog::product/view/attribute.phtml" group="detailed_info" after="product.info.extrahint">
                    <arguments>
                        <argument name="at_call" xsi:type="string">getShortDescription</argument>
                        <argument name="at_code" xsi:type="string">short_description</argument>
                        <argument name="css_class" xsi:type="string">overview</argument>
                        <argument name="at_label" translate="true" xsi:type="string">none</argument>
                        <argument name="title" translate="true" xsi:type="string">Overview</argument>
                        <argument name="add_attribute" xsi:type="string">itemprop="description"</argument>
                         <argument name="tuan_huy" xsi:type="string">Nguyen Cong Tuan Hu1y</argument>

                    </arguments>
                </block>
    </referenceContainer>
    <referenceBlock name="product.info">
        <referenceContainer name="product.info.form.content">
            <block class="TMA\Catalog\Block\Product\View" name="product.info.addtocart" as="addtocart" template="product/view/addtocart.phtml"/>
        </referenceContainer>
    </referenceBlock>
    <referenceContainer name="product.info.extrahint">
      <referenceContainer name="product.info.social">
          <referenceBlock name="product.info.addto">
            <block class="Magento\Catalog\Block\Product\View\AddTo\Compare" name="view.addto.compare" after="view.addto.wishlist"
                                   template="TMA_Catalog::product/view/addto/compare.phtml" />
             <block class="Magento\Wishlist\Block\Catalog\Product\View\AddTo\Wishlist" name="view.addto.wishlist" after="view.addto.compare"
                       template="TMA_Catalog::product/view/addto/wishlist.phtml" />
            </referenceBlock>
        
             <block class="TMA\Catalog\Block\Product\View" name="product.info.mailto" template="product/view/mailto.phtml"/>
        </referenceContainer>
      </referenceContainer>
   
     <referenceBlock name="product.info.details">
        <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.description" template="TMA_Catalog::product/view/description_attribute.phtml" >
             <arguments>
                        <argument name="at_call" xsi:type="string">getDescription</argument>
                        <argument name="at_code" xsi:type="string">description</argument>
                        <argument name="css_class" xsi:type="string">description</argument>
                        <argument name="at_label" xsi:type="string">none</argument>
                        <argument name="title" translate="true" xsi:type="string">Details</argument>
                    </arguments>
                
           </block> 
        <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.attributes" as="additional" template="TMA_Catalog::product/view/attributes.phtml" group="detailed_info">
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Product Information</argument>
                    </arguments>
          </block>
        <!--    <referenceBlock name="reviews.tab">
                <referenceBlock name="product.info.product_additional_data" remove="true"/>
           </referenceBlock>
 -->
        <block class="Magento\Review\Block\Product\Review" 
         name="reviews.tab" as="reviews" template="TMA_Catalog::review/review.phtml" >
                <block class="TMA\Catalog\Block\Review\Product\View\ListView" name="product.info.product_additional_data" as="product_additional_data" template="TMA_Catalog::product/view/list.phtml"/>

                <block class="TMA\Catalog\Block\Form" name="product.review.form" as="review_form">
                    <container name="product.review.form.fields.before" as="form_fields_before" label="Review Form Fields Before" htmlTag="div" htmlClass="rewards"/>
                </block>
                
                
            </block>
     </referenceBlock>

 <!--    \\ <referenceBlock name="product.info.details">
            <referenceBlock name="reviews.tab">
                     <block class="Magento\Review\Block\Product\View\ListView" name="product.info.product_additional_data" as="product_additional_data" template="TMA_Catalog::product/view/list.phtml"/>
                </referenceBlock>
     </referenceBlock> --> -->
      <referenceContainer name="content.aside">

            <block class="TMA\Catalog\Block\Product\Compare\ListCompare" name="catalog.compare.list" template="product/compare/list.phtml" cacheable="true" after="catalog.product.related"/>
              <block class="Magento\Catalog\Block\Product\ProductList\Related" name="catalog.product.related" template="TMA_Catalog::product/list/items.phtml">
                <arguments>
                    <argument name="type" xsi:type="string">related</argument>
                </arguments>
                <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="related.product.addto" as="addto">
                    <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare"
                           name="related.product.addto.compare" as="compare"
                           template="Magento_Catalog::product/list/addto/compare.phtml"/>
                </block>
            </block>
             <block class="Magento\Catalog\Block\Product\ProductList\Upsell" name="product.info.upsell" template="TMA_Catalog::product/list/items.phtml">
                <arguments>
                    <argument name="type" xsi:type="string">upsell</argument>
                </arguments>
                <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="upsell.product.addto" as="addto">
                    <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare"
                           name="upsell.product.addto.compare" as="compare"
                           template="Magento_Catalog::product/list/addto/compare.phtml"/>
                </block>
            </block>
            <block class="Magento\Catalog\Block\Product\View\Additional" name="product.info.additional" as="product_additional_data"/>
        </referenceContainer>
   

         <!--   <move element="review.tab" destination=
            "content.aside" after="catalog.product.related"/> -->
</body>
</page>